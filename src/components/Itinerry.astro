---
import { eventData } from "../data/eventData.js";
import { eventIcons } from "../data/eventIcons.js";
---

<section class="flex flex-col items-center px-10">
    <p class="font-bold mb-5 text-xl text-center uppercase">Itinerario</p>

    <div class="flex flex-col gap-2 items-center">
        {
            eventData.itinerary.map((item, index) => {
                const Icon = eventIcons[item.icon];

                return (
                    <>
                        <div class="flex flex-col items-center text-center">
                            <div class="h-16 w-16 flex items-center justify-center mb-2">
                                <Icon />
                            </div>
                            <p class="font-black opacity-50 text-3xl">
                                {item.time} HRS
                            </p>
                            <p class="font-semibold text-2xl uppercase">{item.title}</p>
                            <p class="text-sm">{item.description}</p>
                        </div>

                        {/* Vertical line except last */}
                        {index !== eventData.itinerary.length - 1 && (
                            <>
                                <div />
                                <div class="flex justify-center">
                                    <div class="bg-gray-300 h-8 w-px" />
                                </div>
                                <div />
                            </>
                        )}
                    </>
                );
            })
        }
    </div>
</section>
