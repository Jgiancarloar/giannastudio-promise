---
import {eventData} from "../data/eventData";

const date = new Date(eventData.date.isoDemo);

const month = String(date.getMonth() + 1).padStart(2, "0");
const day = date.getDate();
const year = date.getFullYear();
---

<div class="h-[800px] mask1 overflow-hidden relative w-full">
    <div class="absolute bg-black/30 h-full w-full z-10"></div>
    <img
        src="/01.webp"
        alt="Pareja en boda"
        class="absolute inset-0 h-full w-full object-cover object-[70%] grayscale-25"
    />
    <div
        class="flex flex-col h-full items-center justify-center relative text-white w-full z-20"
    >
        <p class="mb-5 text-2xl uppercase">Nos casamos</p>
        <p class="font-bold font-parisienne mb-5 text-5xl">{eventData.couple.bride} & {eventData.couple.groom}</p>
        <div class="text-2xl tracking-[10px]">{day}.{month}.{year}</div>
    </div>
</div>